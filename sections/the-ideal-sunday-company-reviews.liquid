{%- if section.settings.space_around -%}
  <div class="index-section">
{%- endif -%}
{%- unless section.settings.full_width -%}
    <div class="page-width">
{%- endunless -%}
    <div id="homepage-review-carousel">
      <div class="page-width">
        <link rel="stylesheet" href="https://widget.reviews.co.uk/combined/style.css?RUKcarousel">
        <script src="https://widget.reviews.co.uk/combined/dist.js?RUKcarousel"></script>
        <div id="CompanyReviews"></div>
      </div>
    </div>
  {%- unless section.settings.full_width -%}
    </div>
  {%- endunless -%}
  {%- if section.settings.space_around -%}
    </div>
{%- endif -%}

<script>
  new ReviewsWidget('#CompanyReviews', {
      store: 'the-ideal-sunday',
      widget: 'prestige-card-carousel',
      maxReviews: 21,

      contentMode: 'company;',
      sku: 'all-product-reviews',

      structuredData: {
        company: "",
        product: ""
      },

      richSnippets: {
          product: true,
          company: true,
      },

      carouselOptions: {
          transitionSpeed: 320,
          draggableOnDesktop: true,
          showSliderArrows: true,
          autoScroll: false,
          autoScrollTime: 15,
          showTitle: true,
          titleText: `Reviews`,
          showSubTitle: true,
          starsInSubTitle: true,
          starsAfterName: false,
          hideDates: false,
          hideThirdParty: true
      },

      styles: {
          starColor:'#FD4B7F',
          primaryColor:'#fff',
          textColor: 'var(--colorTextBody)',
          neutralColor: '#9AAABC',
          borderRadius: "10px",
          boxShadow: "none",
          logoColor: "#000",
          subTitleStar: "#FD4B7F"
      },
  });
</script>


{% schema %}
{
  "name": {
    "en": "Company Reviews"
  },
  "class": "homepage-reviews",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full page width",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "space_around",
      "label": "Add spacing above and below",
      "default": false
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Company Reviews"
      },
      "category": {
        "en": "The Ideal Sunday Assets"
      }
    }
  ]
}
{% endschema %}
